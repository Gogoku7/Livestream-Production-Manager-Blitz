@if (AppState.FormatSelection.SelectedFormat == null) return;

@if (AppState.FormatSelection.SelectedFormat == Enums.FormatsEnum.Singles)
{
    for (var i = 0; i < AppState.SinglesQueu.Count; i++)
    {
        var singles = AppState.SinglesQueu[i];
        var showMoveDownButton = i < AppState.SinglesQueu.Count - 1;
        <LPMBlitz.FG.Components.QueuForms.ManageSinglesQueuSet 
        SinglesQueuSet="singles"
        Index="i"
        ExportSet="ExportSet"
        SubmitSet="SubmitSet"
        RemoveSet="RemoveSet"
        MoveSetUp="MoveSetUp"
        MoveSetDown="MoveSetDown"
        ShowMoveDownButton="showMoveDownButton"></LPMBlitz.FG.Components.QueuForms.ManageSinglesQueuSet>
    }
}
